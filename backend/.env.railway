# Backend Environment Variables for Railway
# Copy these to your Railway service environment variables

# Server
NODE_ENV=production
PORT=3001

# Database (Railway PostgreSQL - use Railway's DATABASE_URL or individual vars)
# If using DATABASE_URL from Railway PostgreSQL addon:
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# Or individual variables:
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_NAME=${{Postgres.PGDATABASE}}
DB_SSL=true

# Redis (Railway Redis addon)
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# JWT Secrets - REQUIRED: Generate using: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption Key - REQUIRED for PII protection: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32

# CORS - Frontend URL
FRONTEND_URL=${{Frontend.RAILWAY_PUBLIC_DOMAIN}}

# Admin User - REQUIRED in production for initial admin access
DEFAULT_ADMIN_EMAIL=admin@yourfirm.com
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# API Documentation (disabled by default in production)
# ENABLE_SWAGGER_IN_PRODUCTION=true

# Optional: AWS S3 for document storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=
